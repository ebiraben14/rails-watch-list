<div class="container mt-5">
  <div class="row">
    <div class="col">
      <h1>Add a new List</h1>

      <%= simple_form_for @list do |f| %>
        <%= f.input :name %>
        <%= f.submit class: 'btn btn-primary mt-3' %>
      <% end %>
      <%= link_to "back to List Index", lists_path, class: 'btn btn-primary mt-3'%>
    </div>
  </div>
</div>
